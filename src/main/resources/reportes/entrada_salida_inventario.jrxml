<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="entrada_salida_inventario"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parámetro para el título dinámico -->
    <parameter name="TITULO" class="java.lang.String"/>

    <!-- Consulta SQL -->
    <queryString>
        <![CDATA[
            SELECT 
                i.nombre_item,
                m.tipo_movimiento,
                m.cantidad,
                m.fecha_movimiento,
                m.numero_comprobante,
                m.observaciones
            FROM movimiento_inventario m
            JOIN inventario i ON m.id_item = i.id_item
            ORDER BY m.fecha_movimiento DESC
        ]]>
    </queryString>

    <!-- Definición de campos -->
    <field name="nombre_item" class="java.lang.String"/>
    <field name="tipo_movimiento" class="java.lang.String"/>
    <field name="cantidad" class="java.lang.Integer"/>
    <field name="fecha_movimiento" class="java.sql.Timestamp"/>
    <field name="numero_comprobante" class="java.lang.String"/>
    <field name="observaciones" class="java.lang.String"/>

    <!-- Título del reporte -->
    <title>
        <band height="50">
            <textField>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TITULO}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Encabezado de columnas -->
    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0" y="0" width="120" height="20"/><text><![CDATA[Producto]]></text></staticText>
            <staticText><reportElement x="120" y="0" width="80" height="20"/><text><![CDATA[Tipo]]></text></staticText>
            <staticText><reportElement x="200" y="0" width="80" height="20"/><text><![CDATA[Cantidad]]></text></staticText>
            <staticText><reportElement x="280" y="0" width="100" height="20"/><text><![CDATA[Fecha]]></text></staticText>
            <staticText><reportElement x="380" y="0" width="100" height="20"/><text><![CDATA[Comprobante]]></text></staticText>
            <staticText><reportElement x="480" y="0" width="75" height="20"/><text><![CDATA[Obs.]]></text></staticText>
        </band>
    </columnHeader>

    <!-- Detalle de filas -->
    <detail>
        <band height="20">
            <textField><reportElement x="0" y="0" width="120" height="20"/><textFieldExpression><![CDATA[$F{nombre_item}]]></textFieldExpression></textField>
            <textField><reportElement x="120" y="0" width="80" height="20"/><textFieldExpression><![CDATA[$F{tipo_movimiento}]]></textFieldExpression></textField>
            <textField><reportElement x="200" y="0" width="80" height="20"/><textFieldExpression><![CDATA[$F{cantidad}]]></textFieldExpression></textField>
            <textField><reportElement x="280" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{fecha_movimiento}]]></textFieldExpression></textField>
            <textField><reportElement x="380" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{numero_comprobante}]]></textFieldExpression></textField>
            <textField><reportElement x="480" y="0" width="75" height="20"/><textFieldExpression><![CDATA[$F{observaciones}]]></textFieldExpression></textField>
        </band>
    </detail>
</jasperReport>
