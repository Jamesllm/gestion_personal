<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="stock_actual"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parámetro de título -->
    <parameter name="TITULO" class="java.lang.String"/>

    <!-- Consulta SQL -->
    <queryString>
        <![CDATA[
            SELECT 
                i.nombre_item,
                i.stock_actual,
                i.stock_minimo,
                CASE 
                    WHEN i.stock_actual < i.stock_minimo THEN 'BAJO'
                    ELSE 'OK'
                END AS estado
            FROM inventario i
            ORDER BY i.nombre_item
        ]]>
    </queryString>

    <!-- Campos que devuelve la consulta -->
    <field name="nombre_item" class="java.lang.String"/>
    <field name="stock_actual" class="java.lang.Integer"/>
    <field name="stock_minimo" class="java.lang.Integer"/>
    <field name="estado" class="java.lang.String"/>

    <!-- Título -->
    <title>
        <band height="50">
            <textField>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TITULO}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Encabezado de columnas -->
    <columnHeader>
        <band height="20">
            <staticText><reportElement x="0"   y="0" width="200" height="20"/><text><![CDATA[Producto]]></text></staticText>
            <staticText><reportElement x="200" y="0" width="100" height="20"/><text><![CDATA[Stock Actual]]></text></staticText>
            <staticText><reportElement x="300" y="0" width="100" height="20"/><text><![CDATA[Stock Mínimo]]></text></staticText>
            <staticText><reportElement x="400" y="0" width="100" height="20"/><text><![CDATA[Estado]]></text></staticText>
        </band>
    </columnHeader>

    <!-- Detalle de cada fila -->
    <detail>
        <band height="20">
            <textField><reportElement x="0"   y="0" width="200" height="20"/><textFieldExpression><![CDATA[$F{nombre_item}]]></textFieldExpression></textField>
            <textField><reportElement x="200" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{stock_actual}]]></textFieldExpression></textField>
            <textField><reportElement x="300" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{stock_minimo}]]></textFieldExpression></textField>
            <textField><reportElement x="400" y="0" width="100" height="20"/><textFieldExpression><![CDATA[$F{estado}]]></textFieldExpression></textField>
        </band>
    </detail>
</jasperReport>
